package components

// DebugControls shows debug buttons at the bottom
templ DebugControls() {
	<div class="border-t border-orange-600/40 bg-orange-900/10 p-2">
		<div class="flex items-center gap-2 flex-wrap">
			<span class="text-xs font-semibold text-orange-300">🐛 Debug:</span>
			<button id="passGMTurn" class="px-3 py-1 text-xs bg-orange-600/20 border border-orange-600/40 rounded hover:bg-orange-600/30 text-orange-300 cursor-pointer">
				⏭️ Pass GM Turn
			</button>
			<button id="testDetailPane" class="px-3 py-1 text-xs bg-orange-600/20 border border-orange-600/40 rounded hover:bg-orange-600/30 text-orange-300 cursor-pointer">
				🗡️ Test Card
			</button>
			<button id="spawnTestMonster" class="px-3 py-1 text-xs bg-orange-600/20 border border-orange-600/40 rounded hover:bg-orange-600/30 text-orange-300 cursor-pointer" disabled>
				👾 Spawn Monster
			</button>
			<button id="addTestItem" class="px-3 py-1 text-xs bg-orange-600/20 border border-orange-600/40 rounded hover:bg-orange-600/30 text-orange-300 cursor-pointer" disabled>
				🎒 Add Item
			</button>
			<button id="toggleDebugOverlay" class="px-3 py-1 text-xs bg-orange-600/20 border border-orange-600/40 rounded hover:bg-orange-600/30 text-orange-300 cursor-pointer" disabled>
				👁️ Debug Overlay
			</button>
		</div>
	</div>
}
